<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{{ title }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le styles -->
    {% block stylesheets %}
    <link id="bootstrap" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('bundles/bootstrapreports/css/typeahead.js-bootstrap.css') }}" rel="stylesheet">
    <style>
      body {
        padding-top: 80px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
      .container {
          max-width: 100% !important;
          padding: 0 20px;
      }
      table {
        max-width: none !important;
      }
      #content {
        width: 98%;
      }
      form input, form textarea, form select {
        max-width: 100%;
      }
    </style>
	{% endblock %}

	<script>
		//this allows us to create onReady functions in the body before loading jquery
		window.queued_jquery_calls = [];
		window.$ = function(func) {
			window.queued_jquery_calls.push(func);
		}
	</script>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="/public/js/html5shiv.js"></script>
      <script src="/public/js/respond.min.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
